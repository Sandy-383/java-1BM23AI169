// Custom exception for handling insufficient balance
class LessBalanceException extends Exception {
    public LessBalanceException(double amount) {
        super("Withdraw amount (" + amount + " Rs) is not possible due to insufficient balance.");
    }
}

// Account class with deposit, withdraw, and balance methods
class Account {
    private double balance;
    private static final double MIN_BALANCE = 500;

    public Account() {
        balance = MIN_BALANCE;
    }

    public void deposit(double amount) {
        if (amount <= 0) {
            System.out.println("Deposit amount must be positive.");
            return;
        }
        balance += amount;
        System.out.println("Deposited " + amount + " Rs. New balance: " + balance + " Rs.");
    }

    public void withdraw(double amount) throws LessBalanceException {
        if (amount <= 0) {
            System.out.println("Withdrawal amount must be positive.");
            return;
        }
        if (balance - amount < MIN_BALANCE) {
            throw new LessBalanceException(amount);
        }
        balance -= amount;
        System.out.println("Withdrawn " + amount + " Rs. New balance: " + balance + " Rs.");
    }

    public double getBalance() {
        return balance;
    }
}

// Test class to demonstrate account operations
public class TestAccount {
    public static void main(String[] args) {
        Account account1 = new Account();
        Account account2 = new Account();

        // Deposit into both accounts
        account1.deposit(1000); // total = 1500
        account2.deposit(700);  // total = 1200

        // Try to withdraw more than allowed from account1
        try {
            account1.withdraw(1600); // Should throw exception
        } catch (LessBalanceException e) {
            System.out.println("LessBalanceException: " + e.getMessage());
        }

        // Withdraw a valid amount from account2
        try {
            account2.withdraw(200); // Should succeed
        } catch (LessBalanceException e) {
            System.out.println("LessBalanceException: " + e.getMessage());
        }
    }
}
